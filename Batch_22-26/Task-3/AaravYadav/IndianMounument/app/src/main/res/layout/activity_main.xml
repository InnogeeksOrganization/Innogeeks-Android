<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f2178afbb88ebc93ba166a9e117c7d53"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.4in"
                android:backgroundTint="#E5DAF3"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:layout_marginBottom="20dp"
                android:elevation="20dp">

                <ImageView
                    android:id="@+id/tajImage"
                    android:layout_width="1.2in"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="10dp"

                    android:clickable="true"
                    android:elevation="20dp"
                    android:src="@drawable/images" />

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9E5EF"

                    android:text="Taj Mahal"
                    android:layout_marginBottom="1.03in"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/location4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop=".49in"

                    android:layout_marginBottom="80dp"
                    android:text="Location"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ticket4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/purple_200"
                    android:text="Explore"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.4in"
                android:layout_margin="20dp"
                android:background="@color/white"
                app:cardBackgroundColor="#DFD4ED"
                android:layout_marginBottom="20dp"
                android:elevation="20dp">
                <ImageView
                    android:layout_width="1.2in"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="10dp"

                    android:elevation="20dp"
                    android:src="@drawable/hwa"/>

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E2ECF6"

                    android:text="Hawa Mahal"
                    android:layout_marginBottom="1.03in"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/location6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop=".49in"

                    android:layout_marginBottom="80dp"
                    android:text="Location"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ticket6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/purple_200"
                    android:text="Explore"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.4in"
                android:layout_margin="20dp"
                android:background="@drawable/f2178afbb88ebc93ba166a9e117c7d53"
                android:layout_marginBottom="20dp"
                android:elevation="20dp">
                <ImageView
                    android:layout_width="1.2in"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="10dp"

                    android:elevation="20dp"
                    android:src="@drawable/redfort"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D1E4F6"

                    android:text="Red Fort"
                    android:layout_marginBottom="1.03in"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop=".49in"

                    android:layout_marginBottom="80dp"
                    android:text="Location"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ticket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/purple_200"
                    android:text="Explore"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1.4in"
                android:backgroundTint="#E5DAF3"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#D7C7EC"
                android:elevation="20dp">
                <ImageView
                    android:layout_width="1.2in"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="10dp"

                    android:elevation="20dp"
                    android:src="@drawable/ram"/>

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9E5EF"
                    android:text="Ram Mandir"
                    android:layout_marginBottom="1.03in"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/location5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop=".49in"

                    android:layout_marginBottom="80dp"
                    android:text="Location"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ticket5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1.25in"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/purple_200"
                    android:text="Explore"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>





</LinearLayout>


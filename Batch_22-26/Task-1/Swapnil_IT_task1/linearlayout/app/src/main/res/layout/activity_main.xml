<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARTOON CHARACTER"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="2">
        <ImageView
        android:id="@+id/image1"
        android:layout_width="210dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:src="@drawable/nobd"/>
        <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
            android:layout_marginLeft="10dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:src="@drawable/nobm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image3"
            android:layout_width="410dp"
            android:layout_height="160dp"
            android:src="@drawable/sizuka2"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_marginLeft="10dp"
            android:layout_height="165dp"
            android:id="@+id/image4"
            android:layout_weight="1"
            android:src="@drawable/nobita"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image5"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:src="@drawable/doraemon"/>
        <ImageView
            android:id="@+id/image6"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dorami"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image7"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/suneo"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/gian"/>
    </LinearLayout>

</LinearLayout>
